<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTimePro.MainPage"
             x:Name="ftmMain">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Label x:Name="lblDisplay" Padding="0,60" HorizontalOptions="Center" FontSize="Title" Text="00:00"/>
            
            <Button Text="Take 5" Clicked="OnBreakButtonClicked"/>
            <Button Text="Take 10" Clicked="OnBreakButtonClicked"/>
            <Button Text="Take 15" Clicked="OnBreakButtonClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>